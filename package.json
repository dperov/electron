{
  "name": "electron-img-viewer",
  "version": "1.0.3",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.yourcompany.electron-img-viewer",
    "productName": "Electron Image Viewer",
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "fileAssociations": [
      {
        "ext": "png",
        "name": "PNG Image",
        "description": "PNG Image File",
        "role": "Viewer"
      },
      {
        "ext": "jpg",
        "name": "JPEG Image",
        "description": "JPEG Image File",
        "role": "Viewer"
      },
      {
        "ext": "jpeg",
        "name": "JPEG Image",
        "description": "JPEG Image File",
        "role": "Viewer"
      },
      {
        "ext": "bmp",
        "name": "Bitmap Image",
        "description": "Bitmap Image File",
        "role": "Viewer"
      },
      {
        "ext": "gif",
        "name": "GIF Image",
        "description": "GIF Image File",
        "role": "Viewer"
      }
    ]
  }
}
